{
  "name": "react-users",
  "version": "0.1.0",
  "description": "Manage users in React, for any oauth provider",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.tsx?\"",
    "lint": "tslint -p tsconfig.json",
